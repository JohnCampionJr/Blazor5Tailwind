@using System.Linq.Expressions

@inherits InputBase<string>

<div>
    @if (!string.IsNullOrWhiteSpace(Label))
    {
        <label for="@Id" class="block text-sm font-medium text-gray-700">@Label</label>
    }
    <div class="relative mt-1 rounded-md shadow-sm">
        <input id="@Id" @bind="@CurrentValue" type="text" class="block w-full border-gray-300 rounded-md sm:text-sm @CssClass" @attributes="AdditionalAttributes" />
        <ValidationIconTw For="@ValidationFor" />
    </div>
    <ValidationMessageTw For="@ValidationFor" />
</div>

@code{
    [Parameter] public string Id { get; set; }
    [Parameter] public string Label { get; set; }
    [Parameter] public Expression<Func<string>> ValidationFor { get; set; }

    protected override bool TryParseValueFromString(string value, out string result, out string validationErrorMessage)
    {
        result = value;
        validationErrorMessage = null;
        return true;
    }
}